@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Staff Directory</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i>&nbsp; Add New Employee
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>Gender</th>
            <th>Title</th>
            <th>Given Name</th>
            <th>Middle Initial</th>
            <th>Surname</th>
            <th>City</th>
            <th>State</th>
            <th>ZipCode</th>
            <th>Birthday</th>
            <th>ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var emp in Model)
        {
            <tr>
                <td width="9%">@emp.Gender</td>
                <td width="9%">@emp.Title</td>
                <td width="9%">@emp.GivenName</td>
                <td width="10%">@emp.MiddleInitial</td>
                <td width="9%">@emp.Surname</td>
                <td width="9%">@emp.City</td>
                <td width="9%">@emp.State</td>
                <td width="9%">@emp.ZipCode</td>
                <td width="9%">@emp.Birthday.ToString("d")</td>
                <td width="9%">@emp.Id</td>
                <td width="9%">
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@emp.Id" class="btn btn-primary mx-2" style="width:150px">
                                <i class="bi bi-pencil-square"></i> Update</a>

                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger mx-2" style="width:150px">
                                <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>